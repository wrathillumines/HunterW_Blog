<!DOCTYPE HTML>

@using PagedList;
@using PagedList.Mvc;

@model IPagedList<HunterW_Blog.Models.BlogPost>

@{
    ViewBag.Title = "Index";
}


<body>

    <div id="page">

        <!-- MAIN SECTION OF PAGE -->

        <aside id="colorlib-hero">
            <div class="flexslider">
                <ul class="slides">
                    <li style="background-image: url(/Images/img_bg_1.jpg)">
                        <div class="overlay"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-pull-3 col-sm-12 col-xs-12 col-md-offset-3 slider-text">
                                    <div class="slider-text-inner">
                                        <div class="desc">
                                            <p class="meta">
                                                <span class="cat"><a href="~/BlogPosts/Index">View My Blog</a></span>
                                            </p>
                                            <h1>My thoughts, ideas, mishaps, and happy accidents in web development</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li style="background-image:url(/Images/img_bg_2.jpg);">
                        <div class="overlay"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-pull-3 col-sm-12 col-xs-12 col-md-offset-3 slider-text">
                                    <div class="slider-text-inner">
                                        <div class="desc">
                                            <p class="meta">
                                                <span class="cat"><a href="~/Home/About">About Me</a></span>
                                            </p>
                                            <h1>My name's Hunter...but who am I, really?</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li style="background-image:url(/Images/img_bg_3.jpg);">
                        <div class="overlay"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-pull-3 col-sm-12 col-xs-12 col-md-offset-3 slider-text">
                                    <div class="slider-text-inner">
                                        <div class="desc">
                                            <p class="meta">
                                                <span class="cat"><a href="~/Home/Contact">Contact Me</a></span>
                                            </p>
                                            <h1>Drop me a line</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </aside>

        <div class="row">
            <div class="col-xs-12 text-center">
                <br />
                <h3>
                    Recent Posts
                </h3>
            </div>
        </div>

		<div id="colorlib-container">
            <div class="container">
                <div class="row row-pb-md">
					@foreach (var item in Model)
					{
						<div class="col-md-4">
							<div class="blog-entry">
								<div class="desc">
									<p class="meta">
										<span class="date">@Html.DisplayFor(modelItem => item.Created)</span>
										<span class="pos">By <a href="/Home/About">Hunter</a></span>
									</p>
									<h2>@Html.ActionLink(item.Title, "Details", "BlogPosts", new { slug = item.Slug }, null)</h2>
									<p>@Html.DisplayFor(modelItem => item.Abstract)</p>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
        <center>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @(Model.PageCount)
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </center>

        <!-- FOOTER -->


    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up2"></i></a>
    </div>

    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Scripts/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="~/Scripts/jquery.flexslider-min.js"></script>
    <!-- Owl carousel -->
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <!-- Magnific Popup -->
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/magnific-popup-options.js"></script>
    <!-- Main -->
    <script src="~/Scripts/main.js"></script>

</body>

